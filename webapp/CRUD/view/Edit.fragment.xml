<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:c="sap.ui.commons">
	<l:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
		<l:content>
			<f:SimpleForm id="idEditForm"
				minWidth="1024"
				maxContainerCols="2"
				editable="true"
				layout="ResponsiveGridLayout"
				title="Campaign Information"
				labelSpanL="2"
				labelSpanM="2"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="2"
				columnsM="1"
				class="editableForm">
				<f:content>
				    <core:Title text="Campaign" />
				    <Label text="ID No." />
					<Text id="idCampaignID" 
					    text="{edit>ID.campaignID}" />
					<Label text="Campaign Name:" />
					<Input id="idCampaignName" 
					    maxLength="35" 
					    value="{edit>CompanyName}" />
					<Label text="Reporting Starts:" />
                    <Input id="idReportingStarts" 
					    maxLength="35" 
					    value="{edit>ReportingStarts}" />
					<Label text="Reporting Ends:" />
                    <Input id="idReportingEnds" 
					    maxLength="35" 
					    value="{edit>ReportingStarts}" />
					<core:Title text="Details" />
					<Label text="Amount Spent" />
					<Input id="idAmountSpent" 
					    maxLength="35" 
					    value="{edit>AmountSpent}" />
					<Label text="Impressions" />
					<Input id="idImpressions" 
					    maxLength="35" 
					    value="{edit>Impressions}" />
					<Label text="Reach" />
					<Input id="idReach" 
					    maxLength="35" 
					    value="{edit>Reach}" />
					<Label text="Result Rate" />
					<Input id="idResultRate" 
					    maxLength="35" 
					    value="{edit>ResultRate}" />
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>