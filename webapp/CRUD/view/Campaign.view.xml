<mvc:View width="100%" controllerName="gbi.controller.Campaign" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"   xmlns:mvc="sap.ui.core.mvc" >
	<Page title="GBI Campaign" id="idPage">
	    
	    <VBox width="80%"  justifyContent="Center">   
	        
	    <l:Grid
		    id="idGrid"
		    defaultSpan="L10 M12 S12"
		    width="auto">
		    <l:content>
		    </l:content>
	    </l:Grid>
	    <Table id="idCampaignsTable"
       	      
			inset="true"
			items="{gbi>/Campaign?$orderby='ID.CustomerID'}"
			itemPress = "handleTableRowPress">
            <columns>
                <Column>
            		<header>
            		    <Text text="Campaign No." />
                    </header>
                </Column>
                <Column>
            		<header>
                        <Text text="Campaign Name" />
                    </header>
                </Column>
                
                
            </columns>
		    <items>
            	<ColumnListItem type="Navigation">
            		<Text text="{gbi>ID.CampaignID}"  />
            		<Text text="{gbi>CampaignName}"  />

            	</ColumnListItem>
            </items>
        </Table>
    </VBox>
    <footer>
	<Bar>
	     <contentRight>
		<Button id="create" text="Create" press="handleCreatePress" />
		<Button id="edit" text="Edit" press="handleEditPress" />
		 <Button id="delete" text="Delete" type="Reject" visible="false" press="handleDeletePress" />
	   	<Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress" />
		<Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" />
	      </contentRight>
	</Bar>
        </footer>
     </Page>
</mvc:View>



